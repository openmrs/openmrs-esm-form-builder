{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018",
      "es2020",
      "es2022",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "ignoreDeprecations":"5.0",
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "__mocks__": ["./__mocks__"],
      "@hooks/*": ["./src/hooks/*"],
      "@types": ["./src/types"],
      "@tools/*": ["./tools/*"],
      "@constants": ["./src/constants"],
      "@resources/*": ["./src/resources/*"],
      "@openmrs/*": ["./node_modules/@openmrs/*"]
    }
  },
  "types": ["@testing-library/jest-dom", "lodash"],
}
